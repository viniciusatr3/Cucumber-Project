<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.content %></td>
    <td><%= link_to 'Show', article, id: "show_#{article.id}" %></td>
    <td><%= link_to 'Edit', edit_article_path(article), id: "edit_#{article.id}" %></td>
    <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, id: "delete_#{article.id}" %></td>
  </tr>
<% end %>
</table>

